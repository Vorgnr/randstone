<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
<body>
<header class="with-padding-left">
  <%= render "layouts/nav" %>
  <%= render "layouts/menu" %>
</header>

<main class="with-padding-left">
  <div class="container">
    <%= yield %>
  </div>
</main>
<script>
  (function($, window, document) {

    var toastHandler = function() {
      <% flash.each do |key, value| %>
        Randstone.toast('<%= value %>', '<%= key %>');
      <% end %>
    };

    $(function() {
      toastHandler();
    });

  }(window.jQuery, window, document));
</script>
</body>
</html>
