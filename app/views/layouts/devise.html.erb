<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
<body>
<header>
  <%= render "layouts/nav" %>
</header>

<main>
    <div class="container">
        <%= yield %>
    </div>
</main>
<script>
  (function($, window, document) {

    var toastHandler = function() {
      <% flash.each do |key, value| %>
        Randstone.toast('<%= value %>', '<%= key %>');
      <% end %>
    };

    $(function() {
      toastHandler();
    });

  }(window.jQuery, window, document));
</script>
</body>
</html>