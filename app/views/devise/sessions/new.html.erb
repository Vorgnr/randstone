<h2>Log in</h2>

<div class="row">
    <%= form_for resource, 
      as: resource_name, 
      url: session_path(resource_name), 
      key:  "value", :html => {:class => 'col s12'} do |f| %>

      <div class="input-field col s6">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
      
      <div class="input-field col s6">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="row">
        <div class="col s12">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end -%>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <%= f.button "Log in", 
            class: "btn waves-effect waves-light", 
            type: 'submit' %>
        </div>
      </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>