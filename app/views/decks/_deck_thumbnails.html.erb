<% if cards %>
<h5>Cards</h5>

<div class="row">
  <div class="col s12">
    <div class="card-panel teal">
      <span class="white-text"><%= @deck.cards.length %> / 30</span>
    </div>
  </div>
  <div class="col s12">
    <ul class="collection">
      <% cards.each do |card, count| %>
      <li class="collection-item">
        <span class="circle"><%= card.cost %></span>
        <span><%= card.name %></span>
        <span style="float:right;"><%= count %></span>
        <span class="card-thumbnail" style="background-image: url(<%= asset_path medium_card_image_path card.image %>);">&nbsp;</span>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>