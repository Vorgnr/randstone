<% if cards.length %>
  <div class="row">
    <div class="col s12">
      <div class="card-panel teal">
        <span class="white-text"><%= cards.length %> / 30</span>
      </div>
    </div>
    <div class="col s12">
      <ul class="collection">
        <% cards.each do |c| %>
          <li class="collection-item"><%= c.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>